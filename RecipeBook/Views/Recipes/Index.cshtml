@{
  Layout = "_Layout";
}

@using RecipeBook.Models;
@using System.Collections.Generic;

<h1>Recipes for @User.Identity.Name</h1>
<hr />

@if (@Model.Count == 0)
{
  <br />
  <h5>No recipes have been added yet.</h5>
  <br />
  <br />
} 
else
{
  @foreach (Recipe recipe in Model)
  {
    <p>@Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId }) | @recipe.Category.Name</p>

  }
}

@Html.ActionLink("Create one!", "Create")
