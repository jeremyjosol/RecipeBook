@{
  Layout = "_Layout";
}

@using RecipeBook.Models;
@using System.Collections.Generic;

<h1>Recipes for @User.Identity.Name</h1>

@using (Html.BeginForm("Search", "Recipes"))
{
  @Html.TextBox("searchRecipes", null, new { placeholder = "Search by Name or Ingredient" })
  <button type="submit">Search</button>
}

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 
else
{
  @foreach (Recipe recipe in Model)
  {
    <li>
      @Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId }) | @recipe.Category.Name 
    </li>
  }
  <input class="btn btn-outline-success btn-sm" type="submit" value="Complete"/>
}