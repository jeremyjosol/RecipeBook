@{
  Layout = "_Layout";
}

@using RecipeBook.Models;
@using System.Collections.Generic;

<h1>Recipes for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No recipes have been added yet!</h3>
  @Html.ActionLink("Click here to create one!", "Create")

} 
else
{
  @foreach (Recipe recipe in Model)
  {
    <li>
      @Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId }) | @recipe.Category.Name 
    </li>
  }
}