@{
  Layout = "_Layout";
}

@model RecipeBook.Models.Recipe
@using System.Collections.Generic;

<h4>Add a new recipe</h4>

<p><strong>NOTE:</strong> You need to have at least one category before you can add a recipe!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Categories") to create a category.</p>

@using (Html.BeginForm())
{
  @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", @class = "form-control" })
  <br />
  @Html.TextBoxFor(model => model.Ingredients, new { placeholder = "Ingredients", @class = "form-control" })
  <br />
  @Html.TextBoxFor(model => model.Instructions, new { placeholder = "Instructions", @class = "form-control" })

  <br />
  @Html.DropDownList("CategoryId", ViewBag.RolesList as SelectList, "Select a Category", new { @class = "form-control" })
  <br />
  <input type="submit" value="Add Recipe" class="btn btn-success" />
}
<p>@Html.ActionLink("Show all recipes", "Index")</p>

