@{
  Layout = "_Layout";
}

@model RecipeBook.Models.Recipe
@using System.Collections.Generic;

<h4>Add a new recipe</h4>

<p><strong>NOTE:</strong> You need to have at least one category before you can add a recipe!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Categories") to create a category.</p>

@using (Html.BeginForm())
{
  @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })
  @Html.TextBoxFor(model => model.Ingredients, new { placeholder = "Ingredients" })
  @Html.TextBoxFor(model => model.Instructions, new { placeholder = "Instructions" })


  @Html.LabelFor(model => model.Category)
  @Html.DropDownList("CategoryId")

  <input type="submit" value="Add new recipe" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all recipes", "Index")</p>

