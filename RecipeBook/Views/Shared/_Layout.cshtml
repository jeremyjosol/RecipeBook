<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecipeBook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RecipeBook.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">RecipeBook</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @using (Html.BeginForm("Search", "Recipes"))
                            {
                                <div class="input-group">
                                    @Html.TextBox("searchRecipes", null, new { placeholder = "Overnight Oats", @class = "form-control", style = "width: 135px;" })
                                    <div class="input-group-append">
                                    <button class="btn btn-dark" style = "width: 75px; margin-left: 5px;" type="submit">Search</button>
                                    </div>
                                </div>
                            }
                        </li>
                        <li class="nav-item">
                        <h6>@Html.ActionLink("Recipes", "Index", "Recipes")</h6> 
                        </li>
                        <li class="nav-item">
                            <h6>@Html.ActionLink("Categories", "Index", "Categories")<h6>
                        </li>
                        <li class="nav-item">
                            <h6>@Html.ActionLink("Tags", "Index", "Tags")</h6>
                        </li>
                        <li class="nav-item">
                            <h6>@Html.ActionLink("Account", "Index", "Account")</h6>
                        </li>
                        <li class="nav-item">
                            <h6>@Html.ActionLink("Admin Portal", "Index", "Role")</h6>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-footer">
            &copy; 2023 - RecipeBook - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
