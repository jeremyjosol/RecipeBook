@{
  Layout = "_Layout";
}

@model Dictionary<IdentityRole, List<ApplicationUser>>
@using System.Collections.Generic;
@using RecipeBook.Models;
@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "ROLES";
}
  
<h1 class="bg-info text-white">All Roles</h1>
<a href="/Role/Create" class="btn btn-secondary">Create a Role</a>
  
<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Name</th><th>Users</th><th>Assign</th><th>Delete</th></tr>
    @foreach (KeyValuePair<IdentityRole, List<ApplicationUser>> role in Model)
    {
        <tr>
            <td>@role.Key.Id</td>
            <td>@role.Key.Name</td>
            <td>
                @foreach (ApplicationUser user in role.Value)
                {
                  <p>@user.UserName</p>
                  }
            </td>
            @* <td i-role="@role.Key.Id"></td> *@
            <td><a class="btn btn-sm btn-primary" href="/Role/Assign" asp-route-id="@role.Key.Id">Assign</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Key.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>