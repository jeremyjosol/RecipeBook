@{
  Layout = "_Layout";
}

@model Dictionary<IdentityRole, List<ApplicationUser>>
@using System.Collections.Generic;
@using RecipeBook.Models;
@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "ROLES";
}
  
<h1 class="text-white">All Roles</h1>
  
<table class="table table-sm table-bordered table-bordered text-white">
  <tr><th>ID</th><th>Name</th><th>Users</th>
    @foreach (KeyValuePair<IdentityRole, List<ApplicationUser>> role in Model)
    {
      <tr>
        <td>@role.Key.Id</td>
        <td>@role.Key.Name</td>
        <td>
          @foreach (ApplicationUser user in role.Value)
          {
            <p>@user.UserName</p>
          }
        </td>
      </tr>
    }
</table>

<h2>Manage Roles</h2>
<hr />
<a href="/Role/Create" class="btn btn-dark">Create a Role</a>
<br />
<a class="btn btn btn-dark" href="/Role/Assign/">Assign a Role</a>
<br />
<a class="btn btn-outline-danger" href="/Role/Delete">Delete a Role</a>
